<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:id="@+id/activity_checkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1D1D1D"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Tóm tắt đơn hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÓM TẮT ĐƠN HÀNG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Địa chỉ giao hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐỊA CHỈ GIAO HÀNG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phoneCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elin Septika Ningrum (+62 812 3456 7890)"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/addressCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Taman Kb. Sirih IV No.3, RW.8, Kp. Bali, Kecamatan Tanah Abang"
                android:textSize="12sp"
                android:textColor="#777"/>

            <ImageButton
                android:id="@+id/btnOpenMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_location_searching_24"
                android:contentDescription="Mở Google Maps" />
        </LinearLayout>

        <!-- Phương thức thanh toán -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHƯƠNG THỨC THANH TOÁN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingTop="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/paymentMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioCOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng (COD)"
                    android:checked="true"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radioPayPal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán bằng PayPal"
                    android:textSize="14sp"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Chi tiết thanh toán -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHI TIẾT THANH TOÁN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalPriceCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/totalShipCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/totalSaleCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FF3D00"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1D1D1D"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Nút đặt hàng và hủy đơn hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt hàng"
                android:backgroundTint="#1976D2"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy đơn hàng"
                android:backgroundTint="#FF3D00"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>