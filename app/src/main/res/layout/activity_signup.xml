<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogoSignup"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/login"
        app:srcCompat="@drawable/login" />

    <!-- Tên ứng dụng -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="F-Food"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Tiêu đề phụ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Đăng ký tài khoản mới"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Ô nhập Họ và tên -->
    <EditText
        android:id="@+id/txtSignup_fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Họ và tên"
        android:padding="12dp" />

    <!-- Ô nhập Email -->
    <EditText
        android:id="@+id/txtSignup_Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <!-- Ô nhập số điện thoại -->
    <EditText
        android:id="@+id/txtSignup_Phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:padding="12dp" />

    <!-- Ô nhập Mật khẩu -->
    <EditText
        android:id="@+id/txtSignup_Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="12dp" />

    <!-- Ô nhập Xác nhận mật khẩu -->
    <EditText
        android:id="@+id/txtSignup_ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:padding="12dp" />

    <!-- Nút đăng ký -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Đăng ký"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- "Nếu đã có tài khoản" -->
    <TextView
        android:id="@+id/txtAlreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Nếu đã có tài khoản, nhấn để đăng nhập"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Nút đăng nhập -->
    <Button
        android:id="@+id/btn_signup_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Đăng nhập"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
